<view bindtouchstart="onTouchStart" bindtouchend="onTouchEnd">
    <view class="container">
        <view class="score-container">
            <text>Score: {{score}}</text>
        </view>
        <!-- 所有grid4*4 -->
        <view class="grid">
            <block wx:for="{{grid}}" wx:key="i">
                <!-- 每一行row4 -->
                <view class="row">
                    <block wx:for="{{item}}" wx:key="j">
                        <!-- block否渲染为 DOM 节点 -->
                        <view wx:if="{{item > 0}}" class="cell tile tile-{{item}}">
                            {{item}}
                        </view>
                        <view wx:else class="cell"> </view>
                        <!-- <view wx:if="{{value > 0}}" class="cell tile tile-{{value}}">
                            {{value}}
                        </view>
                        <view wx:else class="cell">
                            ({{index}},{{index}})数组下标
                        </view> -->

                    </block>
                </view>
            </block>
        </view>
        <view class="restart-button" bindtap="restartGame">Restart</view>
        <view class="back-button" bindtap="goBack"> <text>返回</text></view>
    </view>
</view>


